@model Ghe
@using WebDatVe.Hepper
@{
    var db = new WebDatVePhimEntities();
    var list = new List<SelectListItem>();
    foreach (var item in db.Phongs.ToList())
    {
        list.Add(new SelectListItem { Value = item.MaPhong + "", Text = item.Rap.TenRap + " - " + item.TenPhong });
    }

    var listLoaiGhe = new List<SelectListItem>();
    foreach (var item in ConfigData.DSLoaiGhe)
    {
        listLoaiGhe.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }

    var listHang = new List<SelectListItem>();
    foreach (var item in ConfigData.DSHangGhe)
    {
        listHang.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }

    var listO = new List<SelectListItem>();
    foreach (var item in ConfigData.DSSoO)
    {
        listO.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }
}
@Html.HiddenFor(x => x.MaGhe)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Phòng</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.MaPhong, list, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.MaPhong)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Tên ghế</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.TenGhe, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","50" }
            })
            @Html.ValidationMessageFor(x => x.TenGhe)
        </div>
    </div>   
    <div class="form-group">
        <label class="col-sm-3 control-label">Loại ghế</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.LoaiGhe, listLoaiGhe, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.LoaiGhe)
        </div>
    </div>   
    <div class="form-group">
        <label class="col-sm-3 control-label">Hàng ghế</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.SoHang, listHang, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.SoHang)
        </div>
    </div>  
    <div class="form-group">
        <label class="col-sm-3 control-label">Ô ghế</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.SoO, listO, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.SoO)
        </div>
    </div>  
</div>
