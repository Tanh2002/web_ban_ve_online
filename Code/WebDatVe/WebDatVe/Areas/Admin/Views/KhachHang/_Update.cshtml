@model KhachHang
@Html.HiddenFor(x => x.MaKhachHang)

<div class="box-body">
    @if (Model.MaKhachHang > 0)
    {
        <div class="form-group">
            <label class="col-sm-3 control-label">Tài khoản</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.TenDangNhap, new Dictionary<string, object>
                {
                    {"class", "form-control"},
                    {"readonly","true"},
                    {"required","required" },
                    {"maxlength","50" }
                })
                @Html.ValidationMessageFor(x => x.TenDangNhap)
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="col-sm-3 control-label">Tài khoản</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.TenDangNhap, new Dictionary<string, object>
                {
                    {"class", "form-control"},
                    {"required","required" },
                    {"maxlength","50" }
                })
                @Html.ValidationMessageFor(x => x.TenDangNhap)
            </div>
        </div>
    }
    @if (Model.MaKhachHang <= 0)
    {
        <div class="form-group">
            <label class="col-sm-3 control-label">Mật khẩu</label>
            <div class="col-sm-9">
                @Html.PasswordFor(x => x.MatKhau, new Dictionary<string, object>
                {
                    {"class", "form-control"},
                    {"required","required" },
                    {"maxlength","50" }
                })
                @Html.ValidationMessageFor(x => x.MatKhau)
            </div>
        </div>
    }
    <div class="form-group">
        <label class="col-sm-3 control-label">Họ tên</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.HoTen, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","250" }
            })
            @Html.ValidationMessageFor(x => x.HoTen)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">SĐT</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoDienThoai, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","20" }
            })
            @Html.ValidationMessageFor(x => x.SoDienThoai)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"maxlength","250" }
            })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">CMND</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.CMND, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","50" }
            })
            @Html.ValidationMessageFor(x => x.CMND)
        </div>
    </div>
</div>
