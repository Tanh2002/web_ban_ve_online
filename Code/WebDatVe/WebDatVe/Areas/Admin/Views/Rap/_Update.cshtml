@model Rap
@Html.HiddenFor(x => x.MaRap)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Tên rạp</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.TenRap, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","250" }
            })
            @Html.ValidationMessageFor(x => x.TenRap)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Địa chỉ</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.DiaChi, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","500" }
            })
            @Html.ValidationMessageFor(x => x.DiaChi)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Nội dung</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.NoiDung, new Dictionary<string, object>
            {
                {"class", "form-control"}
            })
            @Html.ValidationMessageFor(x => x.NoiDung)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Hình ảnh</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.HinhAnh, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
                {"maxlength","500" }
            })
            @Html.ValidationMessageFor(x => x.HinhAnh)
        </div>
        <div class="col-sm-2">
            <a class="btn btn-info" id="btnImg">Tải ảnh lên</a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <img src="@Model.HinhAnh" width="150" id="imgAnh" />
        </div>
    </div>
</div>
