@model XuatChieu
@using WebDatVe.Hepper
@{
    var db = new WebDatVePhimEntities();
    var list = new List<SelectListItem>();
    foreach (var item in Model.LichChieu.Rap.Phongs.ToList())
    {
        list.Add(new SelectListItem { Value = item.MaPhong + "", Text = item.Rap.TenRap + " - " + item.TenPhong });
    }

    var listLoaiChieu = new List<SelectListItem>();
    foreach (var item in ConfigData.DSLoaiChieuPhim)
    {
        listLoaiChieu.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }

    var listGio = new List<SelectListItem>();
    foreach (var item in ConfigData.DSGio)
    {
        listGio.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }

    var listPhut = new List<SelectListItem>();
    foreach (var item in ConfigData.DSPhut)
    {
        listPhut.Add(new SelectListItem { Value = item.Key + "", Text = item.Value });
    }
}
@Html.HiddenFor(x => x.MaXuatChieu)
@Html.HiddenFor(x => x.MaLichChieu)

<div class="box-body">
    <div class="form-group">
        <label class="col-sm-3 control-label">Phòng</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.MaPhong, list, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.MaPhong)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Loại chiếu phim</label>
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.LoaiChieuPhim, listLoaiChieu, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
            @Html.ValidationMessageFor(x => x.LoaiChieuPhim)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Thời gian chiếu</label>
        <div class="col-sm-1">
            @Html.DropDownListFor(x => x.GioChieu, listGio, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
        </div>
        <div class="col-sm-1">
            @Html.DropDownListFor(x => x.PhutChieu, listPhut, new Dictionary<string, object>
            {
                {"class", "form-control"},
                {"required","required" },
            })
        </div>
    </div>
</div>
