@model KhachHang
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ==========Event-Section========== -->
<section class="event-section padding-top padding-bottom">
    <div class="container">
        <div class="row flex-wrap-reverse justify-content-center">
            <div class="col-sm-10 col-md-8 col-lg-3">
                <div class="widget widget-categories">
                    <h5 class="title">Menu</h5>
                    <ul>
                        <li style="font-weight:bold;">
                            <a href="/account">
                                <span style="color: chocolate;">Tài khoản</span>
                            </a>
                        </li>
                        <li>
                            <a href="/account/order">
                                <span>Đơn hàng</span>
                            </a>
                        </li>
                        <li>
                            <a href="/account/logout">
                                <span>Thoát</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 mb-50 mb-lg-0">
                <div class="filter-tab">
                    <div class="filter-area">
                        <div class="filter-main">
                            <div class="left w-100 justify-content-between">
                                <div class="item">
                                    <h5>Thông tin tài khoản</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        @if (Model == null || Model.MaKhachHang == 0)
                        {
                            <p>Không có dữ liệu để hiển thị!</p>
                        }
                        else
                        {
                            <div class="checkout-widget d-flex flex-wrap align-items-center justify-cotent-between" style="width: 96%;">
                                <div class="title-area">
                                    <form action="@Url.Action("index")" method="post" class="checkout-contact-form">
                                        @Html.HiddenFor(x => x.MaKhachHang)
                                        <div class="form-group">
                                            Họ tên:
                                            @Html.TextBoxFor(x => x.HoTen, new Dictionary<string, object>
                                            {
                                                {"required","required" },
                                                {"maxlength","250" }
                                            })
                                            @Html.ValidationMessageFor(x => x.HoTen)
                                        </div>
                                        <div class="form-group">
                                            Email:
                                            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>
                                            {
                                                {"maxlength","250" }
                                            })
                                            @Html.ValidationMessageFor(x => x.Email)
                                        </div>
                                        <div class="form-group">
                                            SĐT:
                                            @Html.TextBoxFor(x => x.SoDienThoai, new Dictionary<string, object>
                                            {
                                                {"required","required" },
                                                {"maxlength","20" }
                                            })
                                            @Html.ValidationMessageFor(x => x.SoDienThoai)
                                        </div>
                                        <div class="form-group">
                                            CMND:
                                            @Html.TextBoxFor(x => x.CMND, new Dictionary<string, object>
                                            {
                                                {"required","required" },
                                                {"maxlength","50" }
                                            })
                                            @Html.ValidationMessageFor(x => x.CMND)
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Cập nhật" class="custom-button">
                                            @if (TempData["notice"] != null)
                                            {
                                                <br />
                                                <br />
                                                <p style="color:red; font-style:italic;">@TempData["notice"]</p>
                                            }
                                        </div>
                                        <div class="form-group">
                                            <a href="/account/changepassword">Bạn có muốn đổi mật khẩu?</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Event-Section========== -->
