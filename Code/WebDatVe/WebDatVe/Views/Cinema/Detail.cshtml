@model Rap
@{
    if (Model == null || Model.MaRap == 0)
    {
        Response.Redirect("/cinema");
    }
}
<!-- ==========Banner-Section========== -->
<section class="main-page-header speaker-banner bg_img" data-background="/assets/images/banner/banner07.jpg">
    <div class="container">
        <div class="speaker-banner-content">
            <h2 class="title">Rạp: @Model.TenRap</h2>
            <ul class="breadcrumb">
                <li>
                    <a href="/">
                        Trang chủ
                    </a>
                </li>
                <li>
                    <a href="/cinema">
                        Rạp chiếu phim
                    </a>
                </li>
                <li>
                    Rạp: @Model.TenRap
                </li>
            </ul>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->
<!-- ==========Blog-Section========== -->
<section class="blog-section padding-top padding-bottom">
    <div class="container">
        <div class="row justify-content-center mb-30-none">
            <div class="col-lg-9 mb-50 mb-lg-0">
                <article>
                    <div class="post-item post-details">
                        <div class="post-thumb">
                            <img src="@Model.HinhAnh" alt="blog">
                        </div>
                        <div class="post-content" style="padding-right:0px;">
                            <div class="content" style="width: 100%;">
                                <div class="entry-content p-0">
                                    <div class="left">
                                        <span class="date">@Model.DiaChi </span>
                                    </div>
                                </div>
                                <div class="post-header">
                                    <h4 class="m-title">
                                        Rạp: @Model.TenRap
                                    </h4>
                                    <a href="/movies?cinema=@Model.MaRap" class="custom-button" style="float: right;">Xem phim</a>
                                    <br />
                                    <br />
                                    <br />
                                    <div style="background-color: white; padding: 20px; border-radius: 10px;">
                                        @Html.Raw(Model.NoiDung)
                                    </div>
                                </div>
                                <div class="tags-area">
                                    <div class="tags">
                                        <span>
                                            Tags :
                                        </span>
                                        <div class="tags-item">
                                            <a href="javascript:;"> Rạp </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>
<!-- ==========Blog-Section========== -->